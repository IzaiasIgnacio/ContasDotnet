@model Contas.Models.ViewModel.FormMovimentacaoViewModel
<input type="hidden" name="Id" value="@Model.Id">
<div class="col-md-6">
    <div class="form-group">
        <label style="display:block">Nome</label>
        @Html.TextBoxFor(model => model.Nome, new { @class = "form-control", @placeholder = "Nome", @Value = Model.Nome, @autofocus = true })
    </div>
    <div class="form-group">
        <label style="display:block">Data</label>
        @Html.TextBoxFor(model => model.Data, new { @class = "form-control", @placeholder = "Data", @Value = Model.Data, @autofocus = true })
    </div>
    <div class="form-group">
        <label style="display:block">Tipo</label>
        <select name='tipo' class="form-control">
            @foreach (var tipo in Model.ListaTipos) {
                string sel = null;
                if (Model.Tipo == tipo.nome) {
                    sel = "selected";
                }
                <option value="@tipo.nome">@tipo.nome</option>
            }
        </select>
    </div>
</div>
<div class="col-md-6">
    <div class="form-group">
        <label style="display:block">Valor</label>
        @Html.TextBoxFor(model => model.Valor, new { @class = "form-control", @placeholder = "Valor", @Value = Model.Valor, @autofocus = true })
    </div>
    <div class="form-group">
        <label style="display:block">Status</label>
        <select name='status' class="form-control">
            @foreach (var status in Model.ListaStatus) {
                string sel = null;
                if (Model.Status == status.nome) {
                    sel = "selected";
                }
                <option value="@status.nome" selected=@sel>@status.nome</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label style="display:block">Cart√£o</label>
        <select name='cartao' class="form-control">
            <option value="">Nenhum</option>
            @foreach (var cartao in Model.ListaCartoes) {
                string sel = null;
                if (Model.Cartao == cartao.Id) {
                    sel = "selected";
                }
                <option value="@cartao.Id" selected=@sel>@cartao.Nome</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label style="display:block">Parcelas</label>
        @Html.TextBoxFor(model => model.Parcelas, new { @class = "form-control", @placeholder = "Parcelas", @Value = Model.Parcelas })
    </div>
</div>