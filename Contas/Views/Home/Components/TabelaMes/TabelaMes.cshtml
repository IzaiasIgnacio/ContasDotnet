@model Contas.Models.ViewModel.TabelaMesViewModel
<table class="table table-condensed table-bordered">
    <thead>
        <tr>
            <th>@Model.Mes</th>
            <th class="text-right">@Model.ValorMes</th>
        </tr>
    </thead>
    <tbody>
        @for (int i=0; i<Model.linhas; i++) {
            if (@Model.movimentacoes.ElementAtOrDefault(i) != null) {
                <tr>
                    <td>@Model.movimentacoes[i].Nome</td>
                    <td class="text-right">
                        <input type="hidden" class="id_movimentacao" value="@Model.movimentacoes[i].Id" />
                        @Model.movimentacoes[i].Valor
                    </td>
                </tr>
            }
            else {
                <tr>
                    <td>&nbsp;</td>
                    <td class="text-right">&nbsp;</td>
                </tr>
            }
        }
    </tbody>
    <tfoot>
        <tr>
            <td>Save</td>
            <td class="text-right">@Model.save</td>
        </tr>
        <tr>
            <td>Total</td>
            <td class="text-right"><span class="valor_total">@Model.ValorTotal</span></td>
        </tr>
        <tr>
            <td>Sobra</td>
            <td class="text-right"><span class="valor_sobra">@Model.Sobra</span></td>
        </tr>
    </tfoot>
</table>