@model Contas.Models.ViewModel.IndexViewModel
<div class="modal fade" id="modal_consolidado" role="dialog" tabindex="-1">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true"></span></button>
                <h4 class="modal-title">Valores Consolidados</h4>
            </div>
            <div class="modal-body row">
                <form id="form_consolidado">
                    @await Component.InvokeAsync("FormConsolidados")
                </form>
            </div>
            <div class="modal-footer footer_form_consolidados">
                <button type="button" class="btn btn-primary salvar">Salvar</button>
                <button type="button" class="btn btn-primary cancelar" data-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="modal_movimentacao" role="dialog" tabindex="-1">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true"></span></button>
                <h4 class="modal-title">Movimentação</h4>
            </div>
            <div class="modal-body row">
                <form id="form_movimentacao">
                    @await Component.InvokeAsync("FormMovimentacao")
                </form>
            </div>
            <div class="modal-footer footer_form_movimentacao">
                <button type="button" class="btn btn-primary salvar">Salvar</button>
                <button type="button" class="btn btn-primary cancelar" data-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>
<div class="row div_movimentacoes">
    @for (var i = 0; i <= 5; i++) {
        <div class="col-md-2">
            @await Component.InvokeAsync("TabelaMes", new { movimentacoes = Model.Movimentacoes[i], mes = Model.MesAtual.AddMonths(i), indice = i, linhas = Model.linhas })
        </div>
    }
    @for (var i = 0; i <= 5; i++) {
        <div class="col-md-2 tabela_saving_@i">
            @await Component.InvokeAsync("TabelaSavings", new { mes = Model.MesAtual.AddMonths(i), indice = i })
        </div>
    }
</div>
